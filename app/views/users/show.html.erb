
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1><%=@user.username%></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%=@user.id%>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/update_user/<%=@user.id%>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" value=<%=@user.username%>>

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photos (<%= @user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
    </th>
  </tr>
   <% @user.own_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>
    <td>
      <%= a_photo.poster.username %>
    </td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %></td>
    <td>Show details</td>
  </tr>
  <% end %>

</table>

  </body>
</html>
